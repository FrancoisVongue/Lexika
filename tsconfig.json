{
    "compilerOptions": {
        "target": "es6", 
        "lib": ["esnext"], // what features allowed in your ts code
        "module": "commonjs", 
        "rootDir": "src",
        "outDir": "dist", 
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node", 
        "esModuleInterop": true,
        "sourceMap": true,
        //"noEmitOnError": true,
        "noImplicitReturns": true
    },
    "include": [
        "src/**/*"
    ]
}